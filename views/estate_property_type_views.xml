<odoo>
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="user_id"/>
                        <field name="description"/>
                        <field name="postcode"/>
                        <field name="date_availability"/>
                        <field name="expected_price"/>
                        <field name="selling_price" readonly="1"/>
                        <field name="bedrooms"/>
                        <field name="living_area"/>
                        <field name="facades"/>
                        <field name="garage"/>
                        <field name="garden"/>
                        <field name="garden_area"/>
                        <field name="garden_orientation"/>
                        <field name="property_type_id"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                        <field name="offer_ids"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Estate Property">
                <field name="name"/>
                <field name="user_id"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_estate_property_type"  model="ir.actions.act_window">
        <field name="name">Properties type</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>

   
    <menuitem id="menu_estate_property_type" name="Properties type" parent="menu_estate_root" action="action_estate_property_type"
    sequence="10"/>
    
    
</odoo>